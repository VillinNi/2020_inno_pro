<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>test</filter-name>
        <filter-class>com.filter.HttpFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>test</filter-name>
        <url-pattern>
            /*
        </url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>teacher_filter</filter-name>
        <filter-class>com.filter.TeacherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>teacher_filter</filter-name>
        <url-pattern>/jsp/teacher/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>student_filter</filter-name>
        <filter-class>com.filter.StudentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>student_filter</filter-name>
        <url-pattern>/jsp/student/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>admin_filter</filter-name>
        <filter-class>com.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin_filter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>

</web-app>